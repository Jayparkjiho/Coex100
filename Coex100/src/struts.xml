<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="false" />

    <package name="default" namespace="/" extends="struts-default, json-default">

        <default-action-ref name="main" />
    
    <!-- First, read the HTML elements before calling 'print' action -->
    <action name="main">
    	<result>/index.jsp</result>
    </action>
    
    <action name="login" class="coex.action.LoginAction" method="login">
    	<result type="json"/>
    </action>
    
    
    <action name="idCheck" class="coex.action.LoginAction" method="idCheck">
    	<result type="json"/>
    </action>
    
    <action name="join" class="coex.action.LoginAction" method="insertMember">
    	<result type="json"/>
    </action>
    
    <action name="print" class="coex.action.MemberAction" method="print">
    	<result type="json"/>
    </action>
    
    <action name="delete" class="coex.action.MemberAction" method="delete">
    	<result type="json"/>
    </action>
    
    <action name="questionForm">
    	<result>/question-perpose.jsp</result>
    </action>
    
    <action name="detailForm" class="coex.action.AnswerAction" method="firstQuestion">
    	<result name="success">/question-detail.jsp</result>
    	<result name="input">/error.jsp</result>
    </action>

	<action name="question2" class="coex.action.AnswerAction" method="question2">
    	<result name="success">/question2.jsp</result>
    </action>
    
    <action name="insertPlaceForm">
    	<result>/insertPlaceForm.jsp</result>
    </action>
    
    <action name="insertPlace" class="coex.action.PlaceAction" method="insertPlace">
    	<result name="success" type="redirect">main.action</result>
    </action>

    </package>


</struts>
